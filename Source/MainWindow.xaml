<Window x:Class="MacroApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MacroApp" Height="600" Width="900"
        Background="#1E1E1E" WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3E3E42"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#0E639C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1177BB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#C42B1C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Consolas"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>

        <!-- Top Control Bar -->
        <Border Grid.Row="0" Background="#252526" Padding="10" BorderBrush="#3F3F46" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <Button x:Name="BtnOpen" Content="ðŸ“‚ Open Macro" Style="{StaticResource PrimaryButton}" Click="BtnOpen_Click"/>
                    <Button x:Name="BtnNew" Content="ðŸ“„ New" Click="BtnNew_Click"/>
                    <Button x:Name="BtnSave" Content="ðŸ’¾ Save" Click="BtnSave_Click" IsEnabled="False"/>
                    <Separator Width="20" Background="Transparent"/>
                    <Button x:Name="BtnRecord" Content="âº Record" Style="{StaticResource PrimaryButton}" Click="BtnRecord_Click"/>
                    <Button x:Name="BtnStopRecord" Content="â¹ Stop Recording" Style="{StaticResource DangerButton}" 
                            Click="BtnStopRecord_Click" IsEnabled="False"/>
                </StackPanel>

                <TextBlock Grid.Column="1" x:Name="TxtFileName" Text="No macro loaded" 
                           Foreground="#9CDCFE" FontSize="14" VerticalAlignment="Center" Margin="10,0"/>
            </Grid>
        </Border>

        <!-- Macro Editor -->
        <Border Grid.Row="1" Background="#1E1E1E" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label Content="Macro Script:" FontWeight="Bold" Foreground="White"/>
                <TextBox Grid.Row="1" x:Name="TxtMacroContent" 
                         AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                         TextWrapping="NoWrap" TextChanged="TxtMacroContent_TextChanged"/>
            </Grid>
        </Border>

        <!-- Playback Controls -->
        <Border Grid.Row="2" Background="#252526" Padding="10" BorderBrush="#3F3F46" BorderThickness="0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <Button x:Name="BtnPlay" Content="â–¶ Play" Style="{StaticResource PrimaryButton}" Click="BtnPlay_Click" IsEnabled="False"/>
                    <Button x:Name="BtnPause" Content="â¸ Pause" Click="BtnPause_Click" IsEnabled="False"/>
                    <Button x:Name="BtnStop" Content="â¹ Stop" Style="{StaticResource DangerButton}" Click="BtnStop_Click" IsEnabled="False"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Label Content="Speed:" VerticalAlignment="Center"/>
                    <Slider x:Name="SliderSpeed" Width="150" Minimum="0.1" Maximum="5" Value="1" 
                            TickFrequency="0.1" IsSnapToTickEnabled="True" VerticalAlignment="Center"/>
                    <TextBlock x:Name="TxtSpeed" Text="1.0x" Foreground="White" FontSize="13" 
                               VerticalAlignment="Center" Margin="10,0,0,0" Width="40"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <ProgressBar x:Name="ProgressExecution" Width="200" Height="20" Margin="0,0,10,0"/>
                    <TextBlock x:Name="TxtProgress" Text="0%" Foreground="White" Width="40" VerticalAlignment="Center"/>
                    <TextBlock Text="(F6 to stop)" Foreground="#9CDCFE" FontSize="11" FontStyle="Italic" 
                               VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Log Output -->
        <Border Grid.Row="3" Background="#1E1E1E" Margin="10,0,10,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <DockPanel>
                    <Label Content="Log:" FontWeight="Bold" Foreground="White" DockPanel.Dock="Left"/>
                    <Button Content="Clear" Width="60" Height="25" Click="BtnClearLog_Click" 
                            DockPanel.Dock="Right" Margin="5,5,5,5"/>
                </DockPanel>
                
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="TxtLog" Foreground="#CCCCCC" FontFamily="Consolas" 
                               FontSize="11" Padding="5" TextWrapping="Wrap"/>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
